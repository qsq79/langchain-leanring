# OpenAI API 配置
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_API_BASE=https://api.openai.com/v1

# 如果使用代理，取消下面的注释
# OPENAI_BASE_URL=https://your-proxy-url/v1

# 模型配置
MODEL_NAME=gpt-4
MODEL_TEMPERATURE=0.7
MODEL_MAX_TOKENS=2000

# API 服务配置
API_HOST=0.0.0.0
API_PORT=8001

# 订单服务配置
ORDER_API_BASE_URL=http://localhost:8001/api/v1

# 物流服务配置
LOGISTICS_API_BASE_URL=http://localhost:8001/api/v1

# 重试机制配置
RETRY_INITIAL_DELAY=1
RETRY_MAX_DELAY=10
RETRY_MULTIPLIER=2
RETRY_MAX_ATTEMPTS=3

# 日志配置
LOG_LEVEL=INFO
LOG_DIR=logs

# 应用配置
APP_NAME=Multi-Agent Customer Service System
APP_VERSION=1.0.0
DEBUG=false

# 可视化配置
VISUALIZE_AGENT_INTERACTION=true
SHOW_API_LOGS=true